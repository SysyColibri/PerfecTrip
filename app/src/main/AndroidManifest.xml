<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ig2i.perfectrip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:name=".PerfectripApp"
        android:icon="@mipmap/ic_launcher"
        android:noHistory="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        >

        <activity
            android:name=".ecrans.EcranDeChargement"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name=".EcranDeChargement" />
            </intent-filter>
        </activity>

        <activity android:name=".ecrans.EcranDaccueil"

            android:screenOrientation="nosensor"/>
        <activity android:name=".ecrans.EcranChoixActivitesEdition"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ecrans.EcranChoixTypeDeLieu"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ecrans.EcranListePossibilites"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ecrans.EcranChoixActivitesRecapitulation"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ecrans.APropos"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Call"
            android:screenOrientation="nosensor"/>
        <activity android:name=".GoogleMap"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>
